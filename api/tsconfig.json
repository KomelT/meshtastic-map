{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true
  },
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "include": [
    "./src"
  ],
  "ts-node": {
    "esm": true
  },
}